#MineCraft JAVA版服务器搭建脚本@CentOS7
yum install -y java-1.8.0-openjdk  screen zip
#创建文件夹，搭建1.15.2版本服务器
mkdir /home/mcserver/
cd /home/mcserver/
wget https://launcher.mojang.com/v1/objects/bb2b6b1aefcd70dfd1892149ac3a215f6c636b07/server.jar    -O /home/mcserver/server.jar
#启动服务器，更新最终许可文件
java -Xms1024m -Xmx1024m -jar /home/mcserver/server.jar nogui
sed -i 's/eula=false/eula=true/g' eula.txt
#打开虚拟终端mc，后台托管mc
screen -S mc
java -Xms1024m -Xmx1600m -jar /home/mcserver1/server.jar nogui
#关闭shell，连接服务器，开玩



#备份服务器，将mc目录压缩为mcserver.zip文件
cd /home/mcserver/
zip -r ./mcserver.zip  ./* -r
#到新服务器，创建mc文件夹
mkdir /home/mcserver/
cd /home/mcserver/
#上传备份文件，解压
unzip mcserver.zip
#打开服务器终端，开玩
