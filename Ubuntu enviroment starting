#Ubuntu新系统环境设置
#更新网卡设置
echo  "options iwlwifi 11n_disable=1"  >> /etc/modprobe.d/iwlwifi.conf
#打开/etc/apt/sources.list，更换为阿里源
#Ubuntu新系统更新软件和语言包
apt-get update
apt-get -y upgrade
apt-get install  -y language-pack-zh-hans gcc make perl curl

#退出shell，用普通用户安装v2rayL，使用root用户会失败
#到网盘下载v2rayL：https://www.lanzous.com/iaynbud
#解压运行./install.sh


#下载安装dropbox
cd ~ && wget -O - "https://www.dropbox.com/download?plat=lnx.x86_64" | tar xzf -
~/.dropbox-dist/dropboxd
