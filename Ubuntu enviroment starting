#Ubuntu新系统环境设置
#打开/etc/apt/sources.list，更换为阿里源
#更新网卡设置
echo  "options iwlwifi 11n_disable=1"  >> /etc/modprobe.d/iwlwifi.conf
#Ubuntu新系统更新软件和语言包
apt-get update
apt-get -y upgrade
apt-get install  -y language-pack-zh-hans gcc make perl curl unzip


#到网盘下载v2rayL：https://www.lanzous.com/iaynbud
#用普通用户安装v2rayL，使用root用户会失败
#解压运行
unzip -o /home/hj/下载/v2rayLui-v2.1.3.zip    -d /home/
/home/v2rayLui-v2.1.3/install.sh
