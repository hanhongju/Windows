#Ubuntu新系统环境设置
#打开/etc/apt/sources.list，更换为阿里源
#更新网卡设置
echo  "options iwlwifi 11n_disable=1"  >> /etc/modprobe.d/iwlwifi.conf
#Ubuntu新系统更新软件和语言包
apt-get update
apt-get -y upgrade
apt-get install  -y language-pack-zh-hans gcc make perl curl unzip vim axel
apt --fix-broken install


mkdir /home/hj/download
wget https://github.com/Qv2ray/Qv2ray/releases/download/v2.5.0/qv2ray_2.5.0-1_amd64.deb -O /home/hj/download/qv2ray.deb
dpkg -i /home/hj/download/qv2ray.deb
wget https://github.com/v2ray/v2ray-core/releases/download/v4.23.1/v2ray-linux-64.zip -O /home/hj/download/v2ray.zip
unzip /home/hj/download/v2ray.zip
