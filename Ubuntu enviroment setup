#Ubuntu新系统环境设置
#打开/etc/apt/sources.list，更换为阿里源
#Ubuntu新系统更新软件和语言包
apt-get update
apt-get -y upgrade
apt-get install  -y language-pack-zh-hans gcc make perl curl unzip vim axel ffmpeg net-tools libavcodec-extra
apt --fix-broken install

#下载qv2ray
mkdir /home/hj/download
wget https://github.com/Qv2ray/Qv2ray/releases/download/v2.5.0/Qv2ray.v2.5.0.linux-x64.AppImage -P /home/hj/download/



#修改swap分区大小 
free -h
#创建一个新的12G的swap文件
cd /
dd if=/dev/zero of=/myexchange bs=1G count=12
#创建swap文件系统
mkswap -f myexchange
chmod 0600 myexchange
#开启新的swap
swapoff /swapfile
swapon /myexchange
#设置开机启动
sed -i     ''s/swapfile/myexchange/g''       /etc/fstab
#删掉旧的swap文件
rm -f /swapfile
free -h
#重启
shutdown -r now
